<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drivocolor"
    android:animateLayoutChanges="true">

    <ImageView
        android:layout_width="@dimen/universallogosize"
        android:layout_height="wrap_content"
        android:src="@drawable/drivologo"
        android:layout_centerInParent="true"
        android:id="@+id/imgDrivoLogo"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/driving"
        android:textColor="@android:color/white"
        android:textSize="@dimen/bannertextsize"
        android:layout_marginTop="@dimen/logogap"
        android:layout_below="@id/imgDrivoLogo"
        android:layout_centerInParent="true"
        android:id="@+id/txtBanner"
        android:visibility="gone"/>

</RelativeLayout>