<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drivocolor"
    android:padding="@dimen/curve"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/headerlogogap"
        android:weightSum="1">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:drawableRight="@android:drawable/ic_menu_search"
            android:background="@drawable/searchbox"
            android:padding="@dimen/curve"
            android:id="@+id/edtSearchBike"
            android:hint="@string/search"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:singleLine="true"
            android:imeOptions="actionGo"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@android:color/holo_green_light"
            android:layout_marginLeft="@dimen/curve"
            android:text="@string/go"
            android:textColor="@android:color/white"
            android:id="@+id/btnSearch"/>

    </LinearLayout>

    <!-- scrollview containing bike details -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/headerlogogap"
        android:layout_marginTop="@dimen/headerlogogap"
        android:visibility="gone"
        android:id="@+id/scrDetailContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/bannertextsize"
                android:textColor="@android:color/white"
                android:id="@+id/txtVehicleBrand"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/bannertextsize"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/headerlogogap"
                android:id="@+id/txtVehicleCategory"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/bannertextsize"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/headerlogogap"
                android:id="@+id/txtVehicleModel"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/bannertextsize"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/headerlogogap"
                android:id="@+id/txtVehicleType"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/bannertextsize"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/headerlogogap"
                android:id="@+id/txtOilbrandprice"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/headerlogogap"
                android:id="@+id/spnOilBrands" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/bannertextsize"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/headerlogogap"
                android:id="@+id/txtOilPrice"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout><!-- From: file:/D:/Android/PushAndroid/DrivoHelper/app/src/main/res/layout/activity_url.xml -->